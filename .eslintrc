{
  "parser": "@typescript-eslint/parser",

  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    }
  },

  "env": {
    "browser": true,
    "node": true
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "plugins": ["@typescript-eslint", "react"],

  "rules": {
    // insert rules
  },

  "ignorePatterns": ["node_modules/", "*.config.js"]
}
